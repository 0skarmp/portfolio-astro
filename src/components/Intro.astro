---
import { Image } from "astro:assets";
import { dataRS, type IDataRS } from "../helpers/Dummy/Data";
import ButtonLinks from "./ButtonLinks.astro";
import  hero from "../Images/hero.png";
---

<section class="px-4 my-14">
   
  <Image class=" rounded-full size-40 float-center lg:float-end my-10 border border-1 border-white animate-wiggle animate-infinite"
  src={hero}
  alt="logo"
 
  />
  <h1 
    class="text-white text-3xl md:text-4xl lg:text-5xl font-bold "
  >
    Hola! &#128079; OSKAR<b class="text--300"> DEV</b>
  </h1>
  
  <h2 class="text-white text-xl">
    Programador y Desarrollador de Software<span
      class="text-yellow-300 font-semibold">FULL-STACK.</span
    >
    <p class="text-yellow-100">
         Con enfoque dirigido al front-end
    </p>
     Gamer 
     <code class="text-yellow-300 bg-slate-950 p-1 text-sm rounded-md border border-1  shadow-orange-200 ">console.log("Bienvenidos a"! Oskar World")</code>
  </h2>
   </section>

   <ul class="w-full gap-4 py-10 p-1 flex justify-normal shadow-neutral-800">
    {dataRS.map((r): IDataRS => <ButtonLinks name={r.name} link={r.link} />)}
    </ul>